<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main content -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!-- Logo -->
    <ImageView
        android:id="@+id/apertureLogoImageView"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/aperturelogo"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"/>

    <!-- Ambience -->
    <TextView
        android:id="@+id/apertureTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="104dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/apertureLogoImageView"
        android:text="@string/ambience"
        android:textColor="@color/logo"
        android:textSize="24sp"
        android:textStyle="bold"/>

    <!-- Community Through Photography -->
    <TextView
        android:id="@+id/communityThroughPhotographyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/apertureTextView"
        android:layout_marginStart="55dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@id/apertureLogoImageView"
        android:text="@string/caption"
        android:textColor="@color/logo"
        android:textSize="14sp"/>

    <!-- Social Feed -->
    <TextView
        android:id="@+id/socialFeedTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/social_feed"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/logo"
        android:layout_marginTop="120dp"
        android:layout_marginStart="40dp"
        android:clickable="true"
        android:focusable="true"/>

    <!-- Daily Challenge -->
    <TextView
        android:id="@+id/dailyChallengeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/daily_challenge"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/logo"
        android:layout_marginTop="120dp"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@id/socialFeedTextView" />

    <!-- Profile -->
    <TextView
        android:id="@+id/profileTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/profile"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/logo"
        android:layout_marginTop="120dp"
        android:layout_marginStart="40dp"
        android:layout_toEndOf="@id/dailyChallengeTextView"/>

    <!-- Menu Image -->
    <ImageView
        android:id="@+id/menuImageView"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/menuimage"
        android:layout_marginTop="150dp"
        android:layout_marginStart="16dp"/>

    <!-- Profile Picture Image -->
    <ImageView
        android:id="@+id/profpicImageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/profpic"
        android:layout_marginTop="165dp"
        android:layout_marginStart="82dp"
        android:layout_toEndOf="@id/menuImageView"/>

    <!-- Username TextView -->
    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="175dp"
        android:layout_toEndOf="@id/profpicImageView"
        android:background="@drawable/textbox"
        android:text="@string/user"
        android:textColor="@color/logo"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <!-- Friend List  -->
    <LinearLayout
        android:id="@+id/friendList"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="250dp"
        android:background="@drawable/textbox">

        <!-- Friend 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/friend1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/friend_1"
                android:textSize="16sp"
                android:textColor="@color/logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/active"
                android:textColor="@color/active_green"
                android:textSize="16sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Friend 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/friend2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/friend_2"
                android:textSize="16sp"
                android:textColor="@color/logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inactive"
                android:textColor="@color/inactive_red"
                android:textSize="16sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Friend 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/friend3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/friend_3"
                android:textSize="16sp"
                android:textColor="@color/logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/active"
                android:textColor="@color/active_green"
                android:textSize="16sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>

        <!-- Friend 4 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/friend4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/friend_4"
                android:textSize="16sp"
                android:textColor="@color/logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inactive"
                android:textColor="@color/inactive_red"
                android:textSize="16sp"
                android:layout_marginStart="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Search Box -->
    <EditText
        android:id="@+id/searchEditText"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="250dp"
        android:layout_toEndOf="@id/friendList"
        android:background="@drawable/textbox"
        android:hint="@string/search"
        android:padding="8dp" />

    <!-- Compose Message Button -->
    <TextView
        android:id="@+id/composeMessageText"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/comp_mess"
        android:layout_marginStart="18dp"
        android:layout_marginTop="300dp"
        android:layout_toEndOf="@id/friendList"
        android:textColor="@color/logo"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@drawable/textbox"
        android:padding="12dp"
        android:gravity="center"/>

    <!-- Total Friends -->
    <TextView
        android:id="@+id/textTotalFriendsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fr_count"
        android:textSize="18sp"
        android:textColor="@color/logo"
        android:layout_toEndOf="@id/friendList"
        android:layout_marginStart="18dp"
        android:layout_marginTop="370dp"/>

    <!-- Total Friends Count -->
    <TextView
        android:id="@+id/textTotalFriendsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fr_count_val"
        android:textSize="18sp"
        android:textColor="@color/logo"
        android:layout_toEndOf="@id/textTotalFriendsLabel"
        android:layout_marginStart="5dp"
        android:layout_marginTop="370dp"/>

    <!-- Mail Icon -->
    <ImageView
        android:id="@+id/mailIconImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/mailicon"
        android:layout_toEndOf="@id/textTotalFriendsCount"
        android:layout_alignTop="@id/composeMessageText"
        android:layout_marginTop="60dp"
        android:layout_marginStart="10dp"/>

    <!-- Recent Posts Box -->
    <LinearLayout
        android:id="@+id/recentPosts"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:layout_marginTop="425dp"
        android:layout_marginStart="75dp"
        android:background="@drawable/textbox">

        <!-- Recent Posts -->
        <TextView
            android:id="@+id/textRecentPosts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/recent"
            android:gravity="center"
            android:textColor="@color/logo"
            android:textSize="18sp"/>

        <!-- Example Post -->
        <ImageView
            android:id="@+id/examplePost"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_gravity="center"
            android:src="@drawable/examplepost"
            android:scaleType="centerInside"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textReact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/react"
                android:textColor="@color/logo"
                android:gravity="center"
                android:background="@drawable/textbox"/>

            <TextView
                android:id="@+id/textComment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/comment"
                android:textColor="@color/logo"
                android:gravity="center"
                android:background="@drawable/textbox"/>

            <TextView
                android:id="@+id/textReport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/report"
                android:textColor="@color/logo"
                android:gravity="center"
                android:background="@drawable/textbox"/>

        </LinearLayout>

    </LinearLayout>

    <!-- Raid Ad Image -->
    <ImageView
        android:id="@+id/raidAdImageView"
        android:layout_width="match_parent"
        android:src="@drawable/raidad"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY" />
</RelativeLayout>

    <!-- Sidebar menu -->
    <LinearLayout
        android:id="@+id/sideMenu"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Back Arrow -->
            <ImageView
                android:id="@+id/backArrow"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/backarrow" />

            <!-- Options Menu -->
            <TextView
                android:id="@+id/optionsMenuText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/opt_menu"
                android:textSize="16sp"
                android:layout_marginStart="50dp"
                android:textColor="@color/logo"
                android:textStyle="bold"/>

        </LinearLayout>


        <!-- Upgrade to Premium -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/up_to_p"
            android:textSize="16sp"
            android:textColor="@color/logo"
            android:padding="16dp" />

        <!-- Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            android:textSize="16sp"
            android:textColor="@color/logo"
            android:padding="16dp" />

        <!-- Social Visibility Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/s_v_set"
            android:textSize="16sp"
            android:textColor="@color/logo"
            android:padding="16dp" />

        <!-- Profile Settings -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/p_set"
            android:textSize="16sp"
            android:textColor="@color/logo"
            android:padding="16dp" />

        <!-- Reset Account -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/r_account"
            android:textSize="16sp"
            android:textColor="@color/logo"
            android:padding="16dp" />

        <!-- Delete Account -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/d_account"
            android:textSize="16sp"
            android:textColor="@color/logo"
            android:padding="16dp" />

        <!-- Raid Ad Image -->
        <ImageView
            android:id="@+id/banRaidAdImageView"
            android:layout_width="match_parent"
            android:src="@drawable/raidad"
            android:layout_height="60dp"
            android:layout_marginTop="285dp"
            android:scaleType="fitXY"/>
    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>