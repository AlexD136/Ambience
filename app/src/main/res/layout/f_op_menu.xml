<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Option 1: Block Friend -->
    <TextView
        android:id="@+id/blockFriendTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Block Friend"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:padding="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <!-- Option 2: Delete Friend -->
    <TextView
        android:id="@+id/deleteFriendTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Friend"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:padding="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/blockFriendTextView"/>

</androidx.constraintlayout.widget.ConstraintLayout>