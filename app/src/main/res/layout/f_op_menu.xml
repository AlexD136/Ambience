<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Block Friend -->
    <TextView
        android:id="@+id/blockFriendTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:text="@string/b_friend"
        android:textColor="@color/logo"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Delete Friend -->
    <TextView
        android:id="@+id/deleteFriendTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/d_friend"
        android:textSize="16sp"
        android:textColor="@color/logo"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/blockFriendTextView"/>

    <!-- Report Friend -->
    <TextView
        android:id="@+id/reportFriendTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/r_friend"
        android:textSize="16sp"
        android:textColor="@color/logo"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deleteFriendTextView"/>

    <!-- View Profile -->
    <TextView
        android:id="@+id/viewProfileTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/v_profile"
        android:textSize="16sp"
        android:textColor="@color/logo"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/reportFriendTextView"/>

</androidx.constraintlayout.widget.ConstraintLayout>